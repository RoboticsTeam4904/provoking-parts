{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
		"target": "es2017",
		"jsx": "react",
		"outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false
  },
  "exclude": [
    "node_modules"
  ]
}
